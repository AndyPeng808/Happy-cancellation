<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<HBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.demo.HelloController">
  <VBox alignment="CENTER" spacing="10.0" >
    <GridPane fx:id="levelBoard" gridLinesVisible="true">
      <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
      <!-- Create a 1xn grid of level buttons -->
    </GridPane>
    <Label text="Level: 1" fx:id="levelLabel"/>
    <Label text="Progress: 0%" fx:id="progressLabel"/>

    <GridPane fx:id="toolBoard" gridLinesVisible="true">
      <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
      <!-- Create a nx1 grid of tool buttons -->
    </GridPane>

<!--    <HBox alignment="CENTER" spacing="10.0">-->
<!--      <Label text="Hammer:" fx:id="hammerLabel"/>-->
<!--      <Button text="Use Hammer" fx:id="useHammerButton"/>-->
<!--    </HBox>-->
    <Button text="Restart" fx:id="restartButton"/>
    <Button text="Give Up" fx:id="giveUpButton"/>
  </VBox>
  <GridPane fx:id="gameBoard" gridLinesVisible="true">
    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
    <!-- Create a 5x5 grid of buttons -->
  </GridPane>
</HBox>
